- unless smart_listing.empty?
  table.table.table-striped
    thead
      th date
      th time
      th region
      th vessel
      th longitude
      th latitude
      th sea_state
      th cloud_cover
      th wind_speed
      th wind_direction
      th visibility
      th
    tbody
      - smart_listing.collection.each do |sighting|
        tr.editable [data-id="#{sighting.id}"]
          = render sighting, object: sighting
      = smart_listing.item_new link: new_sighting_path
  = smart_listing.paginate
  = smart_listing.pagination_per_page_links
- else
  p.warning Aucune donn√©e
  = smart_listing.item_new link: new_sighting_path
